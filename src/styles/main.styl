@require 'variables';

body
  -webkit-font-smoothing antialiased
  -webkit-backface-visibility hidden
  -moz-osx-font-smoothing grayscale
  text-rendering optimizeLegibility
  font-family sans-serif

.logo
  margin 30px 0
  max-width 200px

.navigation
  margin 20px 0

  a
    padding 3px 5px

  a, a:visited
    color $link-color
    text-decoration none

  a:not(:first-child)
    margin-left 10px

  a.active
    background $link-color
    color white
